<?xml version="1.0" encoding="UTF-8"?>

<launch>
  <arg name="publish_rate" default="20" />

  <!-- Load joint controller configurations from YAML file to parameter server -->
  <rosparam file="$(find ball_on_plate_gazebo)/config/joint_state_controller.yaml" command="load" />
  <param name="joint_state_controller/publish_rate" type="double" value="$(arg publish_rate)" />
  
  <!-- load the controllers -->
  <node name="controller_spawner" pkg="controller_manager" type="spawner" respawn="false" output="screen"
   ns="/joints" args="link_1_controller
          link_2_controller
          link_3_controller
          joint_state_controller" />

</launch>
